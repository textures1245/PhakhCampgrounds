<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="mb-5 col-6 offset-3">
    <form
      action="/campgrounds/<%= camp._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validation-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= camp.title %>"
          placeholder="Campground title"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= camp.location %>"
          placeholder="City, State/province/area"
          required
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add more images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
        <div class="valid-feedback">
          Valid!
        </div>
        <div class="invalid-feedback">
          This form can't be blank!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="category">Category</label>
        <select required name="campground[category]" id="category" class="form-select" multiple>
          <option value="" selected>Chooses categories...</option>
          <option value="River" >River</option>
          <option value="Valley">Valley</option>
          <option value="Mountain">Mountain</option>
        </select>
        <div class="valid-feedback">
          Valid!
        </div>
        <div class="invalid-feedback">
          This form can't be blank!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground price</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="price-label">$</span>
          </div>
          <input
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            value="<%= camp.price %>"
            placeholder="0.00"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          rows="4"
          required
        >
<%= camp.description %></textarea
        >
      </div>
      <div class="d-inline">
        <button class="btn btn-success">Edit</button>
        <a class="btn btn-secondary" href="/campgrounds/<%= camp._id%>">Back</a>
      </div>
    </div>
    <% camp.image.forEach((img, i) => { %>
      <div class="col-4 mb-4">
        <div class="mb-3">
          <img style="width: 300px;"src="<%= img.thumbnail %>" class="img-thumbnail"alt="">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%=img.filename%>">
          </div>
          <label for="image-<%=i %>">Delete</label>
        </div>
      </div> 
      <% }) %>
    </form>
    <hr>
    <div class="my-3 text-center">
    <form action="/campgrounds/<%= camp._id%>?_method=DELETE" method="POST">
      <button class="btn btn-danger">Remove Campground</button>
    </form>
    </div>
</div>
